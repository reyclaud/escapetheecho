<?xml version="1.0" encoding="utf-8"?><extension	type="module" version="3.0" client="site" method="upgrade">	<name>Instant Facebook Login Comments Module</name>	<author>Joomla! Extensions Store</author>	<creationDate>April 2017</creationDate>	<copyright>Copyright (C) 2015 - Joomla! Extensions Store. All Rights Reserved.</copyright>	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>	<authorEmail>info@storejextensions.org</authorEmail>	<authorUrl>http://storejextensions.org</authorUrl>	<version>2.2.3</version>	<description>Instant Facebook Login module for Facebook comments</description>	<files>		<filename module="mod_instantfblogin_comments">mod_instantfblogin_comments.php</filename>		<folder>tmpl</folder>		<filename>index.html</filename>		<filename>mod_instantfblogin_comments.xml</filename>	</files>		<config>		<fields name="params">			<fieldset name="basic">				<field name="module_comments_href" type="text" size="50" default="" label="COM_INSTANTFBLOGIN_MODULECOMMENTS_HREF" description="COM_INSTANTFBLOGIN_MODULECOMMENTS_HREF_DESC" />				<field name="module_comments_colorscheme" type="list" default="light" label="COM_INSTANTFBLOGIN_MODULECOMMENTS_COLORSCHEME" description="COM_INSTANTFBLOGIN_MODULECOMMENTS_COLORSCHEME_DESC">					<option value="light">COM_INSTANTFBLOGIN_MODULECOMMENTS_COLORSCHEME_LIGHT</option>					<option value="dark">COM_INSTANTFBLOGIN_MODULECOMMENTS_COLORSCHEME_DARK</option>				</field>				<field name="module_comments_numposts" type="text" size="5" default="10" label="COM_INSTANTFBLOGIN_MODULECOMMENTS_NUMPOSTS" description="COM_INSTANTFBLOGIN_MODULECOMMENTS_NUMPOSTS_DESC" />				<field name="module_comments_orderby" type="list" default="social" label="COM_INSTANTFBLOGIN_MODULECOMMENTS_ORDERBY" description="COM_INSTANTFBLOGIN_MODULECOMMENTS_ORDERBY_DESC">					<option value="social">COM_INSTANTFBLOGIN_MODULECOMMENTS_ORDERBY_SOCIAL</option>					<option value="reverse_time">COM_INSTANTFBLOGIN_MODULECOMMENTS_ORDERBY_REVERSETIME</option>					<option value="time">COM_INSTANTFBLOGIN_MODULECOMMENTS_ORDERBY_TIME</option>				</field>				<field name="module_comments_width" type="text" size="5" default="550px" label="COM_INSTANTFBLOGIN_MODULECOMMENTS_WIDTH" description="COM_INSTANTFBLOGIN_MODULECOMMENTS_WIDTH_DESC" />				<field name="module_comments_positionment" type="list" default="absolute" label="COM_INSTANTFBLOGIN_MODULECOMMENTS_POSITIONMENT" description="COM_INSTANTFBLOGIN_MODULECOMMENTS_POSITIONMENT_DESC">					<option value="absolute">COM_INSTANTFBLOGIN_MODULECOMMENTS_POSITIONMENT_ABSOLUTE</option>					<option value="relative">COM_INSTANTFBLOGIN_MODULECOMMENTS_POSITIONMENT_RELATIVE</option>				</field>			</fieldset>		</fields>	</config></extension>